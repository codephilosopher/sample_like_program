
<p id="notice"><%= notice %></p>
<p><%= link_to("go to products", products_path) %></p>
<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <% category.products.each do |product|%>
          <tr>
            <td><%= link_to(image_tag(product.image), like_category_path(product), remote: true) %></td>
            <td>likes(<span id=<%= "like"+product.id.to_s %>><%= product.like %></span>)</td>
            <td><%= link_to 'Show', product.category %></td>
            <td><%= link_to 'Edit', edit_category_path(product.category) %></td>
            <td><%= link_to 'Destroy', product.category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>  
      </tr>
    <% end %>
  </tbody>
</table>

<br>

